<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView android:src="@drawable/ic_brightness_1_black_24dp"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="explode"
        />
    <ImageView android:src="@drawable/ic_cloud_black_24dp"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="fade"
        android:id="@+id/cloud"/>
    <ImageView android:src="@drawable/ic_android_black_24dp"
        android:layout_row="1"
        android:layout_margin="10dp" android:layout_column="0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="sharedElement"
       />
    <ImageView android:src="@drawable/ic_mode_comment_black_24dp" android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:onClick="inPlaceAnim"/>


</GridLayout>